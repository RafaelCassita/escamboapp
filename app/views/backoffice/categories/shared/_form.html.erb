
<h1 class="page-header">Categorias</h1>
<% if @category.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @category.errors.full_messages.each do  |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <%= form_for([:backoffice, @category]) do|f|%>
        <div class="form-group">
         <% if @category.errors.any? %>
         <div class="form-group has-error">
            <%= f.text_field :description, class: "form-control",id: "inputError",placeholder: "Preencha este campo com a descrição da Categoria!" %>
        </div>
        <%else%>
        <label>Descrição</label>
        <%= f.text_field :description, class: "form-control",placeholder: "Ex:Eletrônicos" %>
        <% end %>
    </div>
    <button type="submit" class="btn btn-default">Confirmar</button>
    <% end %>
    
</div>
<!-- /.panel-body -->
</div>
