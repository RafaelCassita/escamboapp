<h1 class="page-header">Admins</h1>
<% if @admin.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
        <% @admin.errors.full_messages.each do  |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <%= form_for([:backoffice, @admin]) do|f|%>
        <div class="form-group">
            <label>Nome</label>
            <%= f.text_field :name, class: "form-control",placeholder: "Nome de Administrador" %>
        </div>
        <div class="form-group">
            <label>Email</label>
            <%= f.text_field :email, class: "form-control",placeholder: "Email" %>
        </div>

        <% if policy(@admin).edit? %>
        <div class="form-group">
            <label>Role</label>
            <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
            <div class="radio">
                <%= b.label {b.radio_button + b.text} %>
            </div> 
            <% end %>
        </div>
        <% end %>

        <div class="form-group">
            <label>Senha</label>
            <%= f.password_field :password, class: "form-control",placeholder: "Senha" %>
        </div>

        <div class="form-group">
            <label>Confirme a Senha</label>
            <%= f.password_field :password_confirmation, class: "form-control",placeholder: "Confirme a senha" %>

        </div>
        <button type="submit" class="btn btn-default">Confirmar</button>
        <% end %>

    </div>
    <!-- /.panel-body -->
</div>
