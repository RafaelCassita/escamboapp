<% if @ad.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @ad.errors.full_messages.each do  |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= form_for([:site, :profile, @ad]) do |f|%>
	<div class="row">
		<div class="col-xs-6">
			<div class="form-group">
				<%= f.label :title%>
				<%= f.text_field :title, class: "form-control"%>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-6">
			<div class="form-group">
				<%= f.label :category%>
				<%= f.collection_select :category_id, Category.all, :id, :description, {}, { class: "form-control"} %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-4">
			<div class="form-group">
				<%= f.label :price%>
				<div class="input-group">
					<div class="input-group-addon">R$</div>
					<%= f.text_field :price, class: "form-control"%>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-6">
			<div class="form-group">
				<%= f.label :finish_date%>
				<%= f.date_field :finish_date, class: "form-control"%>
			</div>
		</div>
	</div>


	<div class="row">
		<div class="col-xs-6">
			<div class="form-group">
				<%= f.label :picture%>
				<%= image_tag @ad.picture.url(:medium), class: "thumbnail"%>
				<%= f.file_field :picture%>
				
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12">
			<div class="form-group">
				<%= f.label :description_short%>
				<%= f.text_area :description_short, class: "form-control", rows: 5%>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12">
			<div class="form-group">
				<%= f.label :description_md%>
				<%= f.text_area :description_md, class: "form-control", rows: 10, data: {provide: 'markdown'}%>
			</div>
		</div>
	</div>


	<div class="row">
		<div class="col-xs-12">
			<div class="form-group">
				<div class="panel panel-primary">
					<div class="panel-heading">
						Pré-Visualização
					</div>
					<div class="panel-body">
						<% unless @ad.description.blank? %>
							<%= @ad.description.html_safe %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%= submit_tag "Finalizar", class: "btn btn-default"  %>
<% end %>