
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="container">
  	<div class="row">
  		<div class="col-md-4 col-md-offset-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  <div class="text-center">
                    <h3><i class="fa fa-lock fa-4x"></i></h3>
                    <h2 class="text-center">Esqueceu a Senha</h2>
                    <p>Você pode resetar sua senha aqui.</p>
                    <div class="panel-body">
      
                      <form id="register-form" role="form" autocomplete="off" class="form" method="post">
      
                        <div class="form-group">
                          <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",  type: "email", placeholder: "Diite seu E-mail para recuperação" %>
                          </div>
                        </div>
                        <div class="form-group">
                          <%= f.submit "Trocar Senha", class: "btn btn-lg btn-primary btn-block" %>
                        </div>          
                          <%= render "members/shared/links" %>  
                        <input type="hidden" class="hide" name="token" id="token" value=""> 
                      </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
  	</div>
  </div>
<% end %>